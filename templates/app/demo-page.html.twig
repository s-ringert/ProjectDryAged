{% extends '@layout/default.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h1><span>Wer ist heute wieder schuld?</span></h1>
    </div>

    <div class="row">
        <div class="col-md-4">
            <p>{{ currentDateTime.format('d.m.Y H:i:s') }}<br/>
                <strong>{{ guiltyPerson }}</strong> ist heute an allem Schuld!</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ quote.getQuote() }}
            <br/>
            <em>- {{ quote.getAuthor() }}</em>
        </div>
    </div>
{% endblock %}
