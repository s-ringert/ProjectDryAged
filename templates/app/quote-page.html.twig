{% extends '@layout/default.html.twig' %}

{% block title %}Zitat des Tages{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h1><span>Zitat des Tages?</span></h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>{{ currentDateTime.format('d.m.Y') }}<br/>
            <strong>{{ quote.getQuote() }}</strong>
            <br/>
            <em>- {{ quote.getAuthor() }}</em>
        </div>
    </div>
{% endblock %}
